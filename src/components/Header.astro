---
const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 w-full z-50 bg-cream/95 backdrop-blur-md border-b border-coral/20">
  <nav class="max-w-7xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 group">
        <div class="w-10 h-10 bg-gradient-to-br from-coral to-teal rounded-xl flex items-center justify-center">
          <span class="text-white font-bold text-lg">AC</span>
        </div>
        <div>
          <h1 class="font-heading font-bold text-xl text-charcoal">Adelyn Cook</h1>
          <p class="text-sm text-charcoal/70">Creative Marketing Strategist</p>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class={`nav-link ${currentPath === '/' ? 'active' : ''}`}>Home</a>
        <a href="/about" class={`nav-link ${currentPath === '/about' ? 'active' : ''}`}>About</a>
        <a href="/services" class={`nav-link ${currentPath === '/services' ? 'active' : ''}`}>Services</a>
        <a href="/portfolio" class={`nav-link ${currentPath === '/portfolio' ? 'active' : ''}`}>Portfolio</a>
        <a href="/contact" class="bg-gradient-to-r from-coral to-teal text-white px-6 py-2 rounded-full font-semibold hover:shadow-lg transition-all duration-300 hover:scale-105">
          Let's Collaborate
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden mt-4 pb-4 border-t border-coral/20">
      <div class="flex flex-col space-y-4 pt-4">
        <a href="/" class={`mobile-nav-link ${currentPath === '/' ? 'active' : ''}`}>Home</a>
        <a href="/about" class={`mobile-nav-link ${currentPath === '/about' ? 'active' : ''}`}>About</a>
        <a href="/services" class={`mobile-nav-link ${currentPath === '/services' ? 'active' : ''}`}>Services</a>
        <a href="/portfolio" class={`mobile-nav-link ${currentPath === '/portfolio' ? 'active' : ''}`}>Portfolio</a>
        <a href="/contact" class="bg-gradient-to-r from-coral to-teal text-white px-6 py-3 rounded-full font-semibold text-center">
          Let's Collaborate
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  .nav-link {
    @apply text-charcoal font-medium hover:text-coral transition-colors duration-300 relative;
  }
  
  .nav-link.active {
    @apply text-coral;
  }
  
  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(to right, #FF6B6B, #00C6AE);
    border-radius: 1px;
  }
  
  .mobile-nav-link {
    @apply text-charcoal font-medium hover:text-coral transition-colors duration-300 py-2;
  }
  
  .mobile-nav-link.active {
    @apply text-coral;
  }
</style>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
